<div class="container">
<div class="row">


<div class= "col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tr>
    <th><p>name</p></th>
    <td><p><%= @user.name %></p></td>
  </tr>
  <tr>
    <th><p>introduction</p></th>
    <td><p><%= @user.introduction%></p></td>
  </tr>
 </table>
 <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
 
 <%= form_for(@book,  url: books_path) do |f| %>
  <h2>New book</h2>
   <h4>Title</h4>
    <%= f.text_field :title,class: "col-xs-12" %>
   <h4>Opinion</h4>
    <%= f.text_field :body,class: "col-xs-12" %>
   <nav>
    <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
   </nav>
 <% end %>
</div>

<div class= "col-xs-9">
<h2>Users</h2>
　<table class="table">
　  <% @users.each do |user| %>
　   <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %></td>
　   <th><%= user.name %><th>
　    <th><%= link_to"Show",user_path(user.id) %></th>
　    </tr>
　  <% end %> 
　</table>
　</div>
　</div>
  </div>