<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
 <h5>name</h5>
  <%= @user.name %>
 <h5>introduction</h5>
  <%= @user.introduction%>
 <%= link_to"setting",edit_user_path(@user.id) %>
 
 
 <%= form_for(@book,  url: books_path) do |f| %>
  <h2>New book</h2>
   <h4>Title</h4>
    <%= f.text_field :title  %>
   <h4>Opinipn</h4>
    <%= f.text_field :body %>
   <nav>
    <%= f.submit 'Create Book' %>
   </nav>
 <% end %>

<h2>Books</h2>
<table>
  <thead>
   <tr>
    <th><p>Title</p></th>
    <th><p>Body</p></th>
   </tr>
  </thead>
  <% @books.each do |book| %>
   <%= link_to user_path(@user.id) do %>
   <tr>
  
   <% end %>
   <td><%=link_to book.title, book_path(book.id)%></td>
   <td><%= book.body %></td>
   </tr>
   <% end %>
 </table>